<% if session[:success] %>
  <div class="flash success">
  	<p><%= session.delete(:success) %></p>
  </div>
<% end %>

<% if session[:error] %>
  <div class="flash error">
    <p><%= session.delete(:error) %></p>
  </div>
<% end %>

<section id="todos">
  <header>
  	<h2><%= @list[:name] %></h2>
  	<ul>
  		<li><a class="edit" href="/lists/<%=@list_id%>/editor">Edit list</a></li>
  	</ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, index| %>
      <li>

        <form actions="/lists/<%=@list_id%>/todos/<%=index%>/check" method="post" class="check">
          <input type="hidden" name="completed" value="h" />
          <button type="submit">Complete</button>
        </form>

        <h3><%= todo[:name] %></h3>
        <form action="/lists/<%=@list_id%>/todos/<%=index%>/destroy" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo]%>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
	<a class="list" href="/lists">All lists</a>
<% end %>

