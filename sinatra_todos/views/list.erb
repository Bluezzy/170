<% if session[:success] %>
  <div class="flash success">
  	<p><%= session.delete(:success) %></p>
  </div>
<% end %>

<section id="todos">
  <header>
  	<h2><%= @list[:name] %></h2>
  	<ul>
  		<li><a class="edit" href="/lists/<%=params[:index]%>/editor">Edit list</a></li>
  	</ul>
  </header>
</section>

<% content_for :header_links do %>
	<a href="/lists">All lists</a>
<% end %>
