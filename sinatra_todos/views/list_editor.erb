<section id="todos">
  <header>
  	<h2>Editing "<%= @list[:name] %>"</h2>
  	<ul>
  		<li>
  			<form action="/lists/<%=params[:index]%>/destroy" method="post">
  				<button type="submit" class="delete">Delete List</button>
  			</form>
  	</ul>
  </header>
</section>

<form action="/lists/<%=params[:index]%>" method="post">
	<d1>
		<dt>
			<label for="list_name">Enter the new list name:</label>
		</dt>
		<dd>
			<input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
		</dd>
	</d1>
	<fieldset class="actions">
		<input type="submit" value="Save">
		<a href="/lists/<%= params[:index] %>">Cancel</a>
	</fieldset>
</form>

