<% if session[:success] %>
  <div class="flash success">
  	<p><%= session.delete(:success) %></p>
  </div>
<% end %>

<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
  	<li>
  		<a href="lists/<%=index%>">
  			<h2><%= list[:name] %></h2>
  		  <p> <%= list[:todos].count %></p>
  		</a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new">Add new list</a>
<% end %>

